<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="frontpage" path="/">
        <default key="_controller">AppBundle:Default:index</default>
    </route>

    <route id="photo_upload" path="/upload">
        <default key="_controller">AppBundle:Photo:upload</default>
    </route>

    <route id="show_photo" path="/{slug}">
        <default key="_controller">AppBundle:Photo:view</default>
    </route>
</routes>
